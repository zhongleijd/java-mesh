    <groupId>com.huawei.sermant</groupId>
    <artifactId>flowrecord-replay</artifactId>
    <version>1.0.0</version>
    <description>The parent project of flowrecord-replay</description>
    <packaging>pom</packaging>

    <modules>
        <module>mockserver</module>
        <module>flowre-console</module>
        <module>flowreplay</module>
        <module>flowrecord-console</module>
    </modules>

    <properties>
