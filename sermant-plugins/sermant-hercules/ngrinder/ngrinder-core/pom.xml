    <build>
        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>true</filtering>
            </resource>
            <resource>
                <directory>src/main/generated</directory>
            </resource>
        </resources>

        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <version>2.15</version>
                <configuration>
                    <useSystemClassLoader>true</useSystemClassLoader>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <version>2.8</version>
                <executions>
                    <execution>
                        <id>dependency_runtime</id>
                        <phase>generate-sources</phase>
                        <configuration>
                            <fileSeparator>/</fileSeparator>
                            <pathSeparator>;</pathSeparator>
                            <excludeArtifactIds>
                                mockito-core,objenesis,fest-util,hamcrest-core,junit,fest-assert
                            </excludeArtifactIds>
                            <outputFile>${project.basedir}/target/classes/dependencies.txt</outputFile>
                        </configuration>
                        <goals>
                            <goal>build-classpath</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

